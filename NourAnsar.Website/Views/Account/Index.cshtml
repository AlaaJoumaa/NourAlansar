@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string msg = TempData["Message"] != null ? TempData["Message"].ToString() : "";
    string email = TempData["Email"] != null ? TempData["Email"].ToString() : "";
}

<section id="login" class="divider" style="top:40%">
    <form asp-controller="Account" asp-action="Login" method="post">

        @Html.AntiForgeryToken()
        
        <div class="col-md-2 col-sm-1 col-xs-1"></div>
        <div class="col-md-8 col-sm-10 col-xs-10">
            @if (!string.IsNullOrWhiteSpace(msg))
            {
                <div class="error-msg"><i class="fa fa-times-circle" style="margin:10px;"></i>@msg</div>
            }
            <div class="form-group has-feedback">
                <input type="email" name="email" class="form-control" placeholder="Email" value="@email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" name="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-md-8 col-sm-12 col-xs-12">
                    @*<div class="checkbox icheck">
                    <label class="">
                        <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                            <ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins>
                        </div> Remember Me
                    </label>
                </div>*@
                </div>
                <!-- /.col -->
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <button type="submit" class="btn btn-theme-colored btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <div class="col-md-2 col-sm-1 col-xs-1"></div>

    </form>
</section>

